<!-- the middle contents -->
<div class="contents">
	<section id="post">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-md-12">
					<h3 class="sub-heading">Post a gig</h3>
					<div class="content-inner-detail">
						<%=form_for @gig do |f|%>
						<div class="row">
							<div class="col-xs-12 col-md-6">
								<div class="form-group">
									<%= f.label :name, "Job Name:", class: "blue" %>
									<%= f.text_field :name, class: "form-control input-lg" %>
									<small class="help-block">Name of your gig</small>
								</div>
							</div>
							<div class="col-xs-12 col-md-6">
								<div class="form-group">
									<%= f.label :budget, "Budget:", class: "blue"%>
									<%= f.text_field :budget, class: "form-control input-lg" %>
									<small class="help-block">Ex: U$1,000</small>
								</div>
							</div>
						</div> <!-- end first row -->
						<div class="row">
							<div class="col-xs-12 col-md-6">
								<div class="form-group">
									<%= f.label :location, "Location:", class: "blue" %>
									<%= f.text_field :location, class: "form-control input-lg" %>
									<small class="help-block">(Denver, San Francisco, Remote, etc..)</small>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12 col-md-6">
								<div class="form-group">
									<%= f.label :description, "Description", class: "blue" %>
									<%= f.text_area :description, class: "form-control", rows: 10 %>
									<small class="help-block">Tell us everything about you Job Vacancy (Website, virtual assistant, etc...)</small>
								</div>
							</div>
						</div>
						<br>
						<%= f.submit "Create Job", class:"btn btn-primary input-lg"%>
						<% end %>

					</div>
				</div>
			</div>
		</div>
	</section>
</div><!-- /.contents -->

<!-- the botom client image -->
<div class="clients">
	<div class="container">
		<img src="img/clients.png" alt="clients" class="img-responsive">
	</div>
</div>

